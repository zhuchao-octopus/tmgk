                android:text="设置"
                android:textColor="#000"
                android:textSize="25sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="#677E7E"></View>
        </RelativeLayout>
        <LinearLayout
