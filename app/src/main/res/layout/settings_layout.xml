                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1.4"
                    android:background="@null"
                    android:gravity="center"
                    android:text="空闲"
                    android:textColor="#000"
                    android:textSize="20dp" />
